<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="com.cp2y.cube.activity.WeChatLoginActivity">

    <!-- 导航栏 -->
    <include
        android:id="@+id/app_title"
        layout="@layout/app_bar_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/weChart_icon"
        android:src="@mipmap/icon_logo"
        android:layout_below="@id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/weChart_icon_tv"
        android:layout_width="wrap_content"
        android:textSize="@dimen/app_news_total"
        android:text="彩之家"
        android:layout_below="@id/weChart_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorSelectText"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/weChart_icon_btnLogin"
        android:layout_below="@id/weChart_icon_tv"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/btn_login_n"
        android:layout_marginTop="110dp"
        android:layout_width="268dp"
        android:layout_height="42dp" />
    <LinearLayout
        android:id="@+id/weChart_checkBox_ll"
        android:layout_below="@id/weChart_icon_btnLogin"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/weChart_checkBox"
            android:checked="true"
            style="@style/WeChatCheck"
            android:layout_marginRight="10dp"
             />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:text="我已年满18周岁并同意"
            android:textColor="@color/colorLogoText"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_term"
            android:layout_width="wrap_content"
            android:text="用户协议"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlueBall"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
