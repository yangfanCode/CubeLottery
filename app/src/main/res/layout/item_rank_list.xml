<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/item_rank_title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/rank_tvName"
            style="@style/text555555_14"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/rank_iv"
            android:layout_width="14dp"
            android:layout_height="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/td_xiala" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:layout_height="@dimen/padding_1dp"/>
    <LinearLayout
        android:id="@+id/rank_detail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.cp2y.cube.custom.MyListView
            android:id="@+id/rank_lv"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:background="@color/colorBackground"
            android:layout_height="@dimen/padding_1dp"/>
    </LinearLayout>

</LinearLayout>