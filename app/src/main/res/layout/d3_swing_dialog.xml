<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_corner"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/swing_dialog_title"
    android:layout_width="wrap_content"
    android:text="号码振幅"
    android:textSize="@dimen/app_tvMidBall_size"
    android:textColor="@color/colorLeftMenu"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/swing_dialog_message"
        android:layout_below="@id/swing_dialog_title"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="38dp"
        android:layout_marginRight="18dp"
        android:text="@string/swing_dialog"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/swing_dialog_btn"
        android:layout_below="@id/swing_dialog_message"
        android:layout_width="match_parent"
        android:background="@color/colorBlueBall"
        android:text="我知道了"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/app_tvMidBall_size"
        android:layout_height="50dp" />
</android.support.percent.PercentRelativeLayout>