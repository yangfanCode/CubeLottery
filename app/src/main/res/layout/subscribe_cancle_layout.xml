<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/bg_subscribe_cancle"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/text555555_16"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/padding_6dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:text="提示" />

        <TextView
            style="@style/text555555_14"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/padding_18dp"
            android:layout_marginTop="@dimen/padding_6dp"
            android:text="确定要取消关注吗" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1dp"
            android:background="@color/colorBackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sub_cancle_tvCancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/colorBlueBall" />

            <View
                android:layout_width="@dimen/padding_1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBackground" />

            <TextView
                android:id="@+id/sub_cancle_tvSunmit"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确认"
                android:textColor="@color/colorBlueBall" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>