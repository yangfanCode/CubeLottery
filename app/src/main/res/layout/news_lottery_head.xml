<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/news_lottery_head_layout"
            android:layout_width="match_parent"
            android:layout_height="186dp">
            <!--此处布局内更换中奖未中奖布局-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/news_lottery_btnNews"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:background="@drawable/app_news_lottery_btn"
                    android:drawableLeft="@mipmap/icon_news_lottery_zixun"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="新闻资讯" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/news_lottery_btnPridiect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:background="@drawable/app_news_lottery_btn"
                    android:drawableLeft="@mipmap/icon_news_lottery_yuce"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="投注预测" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/news_lottery_btnSkill"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:background="@drawable/app_news_lottery_btn"
                    android:drawableLeft="@mipmap/icon_news_lottery_daquan"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="技巧大全" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/colorNewsLotteryLine" />
    </LinearLayout>
</LinearLayout>