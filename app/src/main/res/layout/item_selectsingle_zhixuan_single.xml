<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/library_root"
    android:background="@drawable/library_number_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/select_single_check"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:checked="true"
            style="@style/selectSingleCheck"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="直选单式"
            android:textColor="@color/colorSelectText"
            android:textSize="@dimen/app_tvSmall_size"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="17dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/zhixuan_single_bai"
            android:layout_width="26dp"
            android:layout_marginRight="4dp"
            android:textSize="@dimen/app_tvBall_size"
            android:textColor="@color/colorNormalRed"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/lottery_ball"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/zhixuan_single_shi"
            android:layout_width="26dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/app_tvBall_size"
            android:textColor="@color/colorNormalRed"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:background="@drawable/lottery_ball"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/zhixuan_single_ge"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/app_tvBall_size"
            android:textColor="@color/colorNormalRed"
            android:gravity="center"
            android:layout_width="26dp"
            android:background="@drawable/lottery_ball"
            android:layout_height="26dp" />
    </LinearLayout>
    <View
        android:id="@+id/seperate_line1"
        style="@style/BaseLine"
        android:visibility="gone"
        android:background="@color/colorGrayLine"
        android:layout_alignParentBottom="true"/>
</android.support.percent.PercentRelativeLayout>