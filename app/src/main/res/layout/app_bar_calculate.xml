<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_calc"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/nav_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/calculate_tvDate"
                android:padding="@dimen/padding_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_7"
                android:layout_gravity="right|center_vertical"
                android:textColor="@color/colorBlueBall" />

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/trend_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/BaseTextFilter"
                android:gravity="center"
                android:textColor="@color/colorSelectText"
                android:textSize="@dimen/app_tvBall_size" />

            <ImageView
                android:id="@+id/trend_pop_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/toolbar_title"
                android:src="@mipmap/icon_xiaola" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.AppBarLayout>
