<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="7dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/numlibrary_double_tv"
        android:layout_width="wrap_content"
        android:text="复式"
        android:textSize="@dimen/app_tvSmall_size"
        android:textColor="@color/colorSelectText"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content" />
    <com.cp2y.cube.widgets.TouchLessGridView
        android:layout_toRightOf="@id/numlibrary_double_tv"
        android:id="@+id/numlibrary_double_gv_red"
        android:layout_width="match_parent"
        android:numColumns="8"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content">
    </com.cp2y.cube.widgets.TouchLessGridView>
    <com.cp2y.cube.widgets.TouchLessGridView
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/numlibrary_double_tv"
        android:id="@+id/numlibrary_double_gv_blue"
        android:layout_below="@id/numlibrary_double_gv_red"
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:numColumns="8"
        android:layout_height="wrap_content">
    </com.cp2y.cube.widgets.TouchLessGridView>


</RelativeLayout>