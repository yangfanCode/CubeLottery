<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:background="?android:attr/selectableItemBackground"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:paddingLeft="15dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/news_item_industry_title"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:textSize="@dimen/app_tvNomal_size"
                android:lineSpacingExtra="8dp"
                android:textColor="@color/colorSelectText"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/news_item_industry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/app_tvSmall_size"
                android:textColor="@color/colorSpanTextSelect"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="22dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="22dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/icon_zan" />

                <TextView
                    android:id="@+id/news_item_industry_zanCount"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/app_tvSmall_size"
                    android:textColor="@color/colorSpanTextSelect"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/icon_kan" />

                <TextView
                    android:id="@+id/news_item_industry_kanCount"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/app_tvSmall_size"
                    android:textColor="@color/colorSpanTextSelect"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/news_item_industry_icon"
                android:layout_width="88dp"
                fresco:placeholderImage="@mipmap/img_preload"
                android:layout_centerInParent="true"
                android:layout_height="70dp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:background="@color/colorNewsSupportLine"
        android:layout_alignParentBottom="true"
        android:layout_height="0.5dp"/>
</android.support.percent.PercentRelativeLayout>