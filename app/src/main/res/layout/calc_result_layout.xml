<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_10"
    android:paddingRight="@dimen/padding_10"
    android:paddingBottom="@dimen/padding_20"
    android:paddingTop="@dimen/padding_8">

    <TextView
        style="@style/text555555_16"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_gravity="center_horizontal"
        android:text="兑奖结果" />

    <include layout="@layout/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="等级"
            android:textColor="@color/colorchecklottery"
            android:textSize="@dimen/app_tvSmall_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="奖金(元)"
            android:textColor="@color/colorchecklottery"
            android:textSize="@dimen/app_tvSmall_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="您的中奖注数"
            android:textColor="@color/colorchecklottery"
            android:textSize="@dimen/app_tvSmall_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="您的奖金(元)"
            android:textColor="@color/colorchecklottery"
            android:textSize="@dimen/app_tvSmall_size" />
    </LinearLayout>

    <com.cp2y.cube.custom.MyListView
        android:id="@+id/calc_prize_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />

    <TextView
        android:id="@+id/calc_tvResult"
        style="@style/text555555_14"
        android:layout_marginBottom="@dimen/padding_12dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:id="@+id/calc_prize_ll"
        android:layout_marginBottom="@dimen/padding_12dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/calc_tvResultR"
            android:textColor="@color/colorNormalRed"
            style="@style/text555555_18"
            android:layout_gravity="center_horizontal" />
        <TextView
            style="@style/text555555_18"
            android:text="元!"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <Button
        android:id="@+id/calc_btnKnow"
        android:layout_width="131dp"
        android:layout_height="24dp"
        android:text="知道了"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/colorBlueBall"
        android:background="@drawable/app_myfilter_ignore_selected"
        android:layout_gravity="center_horizontal" />
</LinearLayout>