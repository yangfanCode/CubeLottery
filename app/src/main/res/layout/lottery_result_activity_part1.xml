<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/lottery_lotto"
            android:textColor="@color/colorchecklottery"
            android:textSize="@dimen/app_tvNomal_size" />

        <EditText
            android:id="@+id/lottery_period"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_edit_background"
            android:enabled="false"
            android:textCursorDrawable="@drawable/color_cursor"
            android:text=""
            android:maxLength="5"
            android:inputType="number"
            android:textColor="@color/colorBlueBall"
            android:textSize="@dimen/app_tvNomal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期"
            android:textColor="@color/colorchecklottery"
            android:textSize="@dimen/app_tvNomal_size" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/lottery_multiple"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_edit_background"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:textCursorDrawable="@drawable/color_cursor"
            android:enabled="false"
            android:textColor="@color/colorBlueBall"
            android:textSize="@dimen/app_tvNomal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倍"
            android:textColor="@color/colorchecklottery"
            android:textSize="@dimen/app_tvNomal_size" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投注方式:"
            android:textColor="@color/colorchecklottery"
            android:textSize="@dimen/app_tvNomal_size" />

        <TextView
            android:id="@+id/lottery_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="单式"
            android:textColor="@color/colorchecklottery"
            android:textSize="@dimen/app_tvNomal_size" />
    </LinearLayout>

    <com.cp2y.cube.custom.MyListView
        android:id="@+id/scanResult_lv"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.cp2y.cube.custom.MyListView>
</LinearLayout>
