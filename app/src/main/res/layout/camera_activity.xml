<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
<com.google.android.cameraview.CameraView
    android:id="@+id/camera_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 导航栏 -->
        <RelativeLayout
            android:background="@color/no_back_black"
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/camera_picture_back"
                android:layout_width="30dp"
                android:src="@mipmap/back_chevron_white"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:text="彩票扫一扫"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/camera_tip"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/kjxq_icon_tip"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/camera_picture"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/camera_tip"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@mipmap/icon_xiangce"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/scan_layout"
            android:layout_below="@id/app_title"
            android:layout_width="match_parent"
            android:layout_height="520dp">
            <View
                android:id="@+id/view_left"
                android:layout_alignParentLeft="true"
                android:layout_width="30dp"
                android:background="@color/no_back_black"
                android:layout_height="match_parent"/>
            <View
                android:id="@+id/view_right"
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:background="@color/no_back_black"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_toRightOf="@id/view_left"
                android:layout_toLeftOf="@id/view_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/scan_border"/>
            <ImageView
                android:id="@+id/camera_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view_left"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/view_right"
                android:src="@mipmap/camera_scan"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/no_back_black"
            android:layout_below="@id/scan_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:background="@color/no_back_blacks"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/app_tvBall_size"
                android:text="请持正对准彩票区域"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</com.google.android.cameraview.CameraView>
</RelativeLayout>