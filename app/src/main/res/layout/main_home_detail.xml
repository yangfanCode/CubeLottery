<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_main_home_deail_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/main_home_detail_head"
        android:layout_width="68dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="19dp"
        android:background="@mipmap/user_zhongjiang">

        <TextView
            android:id="@+id/main_home_detail_type"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/app_tvMin_size" />

        <TextView
            android:id="@+id/main_home_detail_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_home_detail_type"
            android:gravity="center"
            android:textColor="@color/colorSpanTextSelect"
            android:textSize="@dimen/app_tvNomal_size" />
    </RelativeLayout>

    <View
        android:id="@+id/main_home_view1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/main_home_detail_head"
        android:background="@color/colorBackground" />

    <ImageView
        android:id="@+id/main_home_ivRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@mipmap/kjgg_icon_right" />

    <com.cp2y.cube.widgets.TouchLessGridView
        android:id="@+id/main_home_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@id/main_home_ivRight"
        android:layout_toRightOf="@id/main_home_view1"
        android:numColumns="2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorBackground" />
</android.support.percent.PercentRelativeLayout>