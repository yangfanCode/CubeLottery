<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_zu6_dantuo_tv"
            android:layout_width="wrap_content"
            android:textColor="@color/colorSelectText"
            android:textSize="@dimen/app_tvSmall_size"
            android:text="组六"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="11dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/item_zu6_dantuo_llDan"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/item_zu6_dantuo_tv"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="胆"
                android:layout_marginRight="13dp"
                android:textColor="@color/colorSpanTextSelect"
                android:textSize="@dimen/app_tvSmall_size"
                android:layout_height="wrap_content" />
            <com.cp2y.cube.widgets.TouchLessGridView
                android:id="@+id/item_zu6_dan_gv"
                android:verticalSpacing="5dp"
                android:columnWidth="30dp"
                android:layout_marginTop="5dp"
                android:horizontalSpacing="2dp"
                android:layout_width="238dp"
                android:numColumns="8"
                android:layout_height="wrap_content">
            </com.cp2y.cube.widgets.TouchLessGridView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/item_zu6_dantuo_llDan"
            android:id="@+id/item_zu3_dantuo_llTuo"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/item_zu6_dantuo_tv"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="拖"
                android:layout_marginRight="13dp"
                android:textColor="@color/colorSpanTextSelect"
                android:textSize="@dimen/app_tvSmall_size"
                android:layout_height="wrap_content" />
            <com.cp2y.cube.widgets.TouchLessGridView
                android:id="@+id/item_zu6_tuo_gv"
                android:verticalSpacing="5dp"
                android:columnWidth="30dp"
                android:layout_marginTop="5dp"
                android:horizontalSpacing="2dp"
                android:layout_width="238dp"
                android:numColumns="8"
                android:layout_height="wrap_content">
            </com.cp2y.cube.widgets.TouchLessGridView>
        </LinearLayout>
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>