<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_multi_calc_tvDate"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:layout_width="0dp"
        style="@style/text4A4A4A_12"
        android:gravity="center"
        android:background="@drawable/bg_multi_calc_itemstyle2"
        android:layout_height="wrap_content"
        android:layout_weight="93" />

    <TextView
        android:id="@+id/item_multi_calc_tvMulti"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        style="@style/text4A4A4A_12"
        android:gravity="center"
        android:background="@drawable/bg_multi_calc_itemstyle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="114" />

    <TextView
        android:id="@+id/item_multi_calc_tvPeriodNow"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        style="@style/text4A4A4A_12"
        android:gravity="center"
        android:background="@drawable/bg_multi_calc_itemstyle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="203" />

    <TextView
        android:id="@+id/item_multi_calc_tvPeriodTotal"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        style="@style/text4A4A4A_12"
        android:gravity="center"
        android:background="@drawable/bg_multi_calc_itemstyle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="203" />

    <TextView
        android:id="@+id/item_multi_calc_tvIncome"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        style="@style/text4A4A4A_12"
        android:gravity="center"
        android:background="@drawable/bg_multi_calc_itemstyle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="203" />

    <TextView
        android:id="@+id/item_multi_calc_tvIncomeRate"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        style="@style/text4A4A4A_12"
        android:gravity="center"
        android:background="@drawable/bg_multi_calc_itemstyle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="187" />
</LinearLayout>
</android.support.percent.PercentRelativeLayout>