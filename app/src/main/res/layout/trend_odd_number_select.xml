<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="46dp"
    android:id="@+id/odd_number_ll"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/trend_submit_tips"
        android:layout_width="156dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/app_tvNomal_size"
        android:textColor="@color/colorSelectText"
        android:text="选择条件并保存 ➝"/>

    <CheckBox
        style="@style/TrendConditionCheck"
        android:layout_width="38dp"
        android:text="7:0"/>

    <CheckBox
        style="@style/TrendConditionCheck"
        android:layout_width="38dp"
        android:text="6:1"/>

    <CheckBox
        style="@style/TrendConditionCheck"
        android:layout_width="38dp"
        android:text="5:2"/>

    <CheckBox
        style="@style/TrendConditionCheck"
        android:layout_width="38dp"
        android:text="4:3"/>

    <CheckBox
        style="@style/TrendConditionCheck"
        android:layout_width="38dp"
        android:text="3:4"/>

    <CheckBox
        style="@style/TrendConditionCheck"
        android:layout_width="38dp"
        android:text="2:5"/>

    <CheckBox
        style="@style/TrendConditionCheck"
        android:layout_width="38dp"
        android:text="1:6"/>

    <CheckBox
        android:id="@+id/trend_blue_select"
        style="@style/TrendConditionCheck"
        android:layout_width="38dp"
        android:text="0:7"/>
    
    <View
        android:layout_width="460dp"
        android:layout_height="1dp"/>

    <View
        android:id="@+id/trend_blue_select1"
        android:layout_width="60dp"
        android:layout_height="1dp"/>

</LinearLayout>