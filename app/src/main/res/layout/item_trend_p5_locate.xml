<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trend_item_root"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/trend_item_height">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/trend_item_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trend_nums"
                style="@style/TrendDate"
                android:layout_width="69dp"
                android:text="8 6 4 5 3" />

            <com.cp2y.cube.widgets.trend.D3TrendLocateView
                android:id="@+id/trend_locate"
                android:layout_width="300dp"
                android:layout_height="@dimen/trend_item_height" />
        </LinearLayout>

        <com.cp2y.cube.widgets.trend.DashedLineView
            android:id="@+id/line_top"
            android:layout_width="330dp"
            android:layout_height="1dp" />

        <com.cp2y.cube.widgets.trend.DashedLineView
            android:id="@+id/line_bottom"
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


</HorizontalScrollView>