<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/filter_dantuo_layout"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/filter_dantuo_tv"
            android:layout_marginRight="10dp"
            android:text="胆拖"
            android:layout_marginTop="4dp"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/app_tvNomal_size"
            android:textColor="@color/colorSelectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_toRightOf="@id/filter_dantuo_tv"
            android:id="@+id/filter_dantuo_danll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="胆"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
            <com.cp2y.cube.widgets.TouchLessGridView
                android:id="@+id/filter_dantuo_dan_gv"
                android:layout_width="210dp"
                android:verticalSpacing="10dp"
                android:numColumns="7"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/filter_dantuo_tv"
            android:id="@+id/filter_dantuo_tuoll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/filter_dantuo_danll"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="拖"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
            <com.cp2y.cube.widgets.TouchLessGridView
                android:id="@+id/filter_dantuo_tuo_gv"
                android:layout_width="210dp"
                android:verticalSpacing="10dp"
                android:numColumns="7"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/filter_dantuo_tv"
            android:id="@+id/filter_dantuo_lanll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/filter_dantuo_tuoll"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="蓝"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <com.cp2y.cube.widgets.TouchLessGridView
                android:id="@+id/filter_dantuo_lan_gv"
                android:layout_width="210dp"
                android:verticalSpacing="10dp"
                android:numColumns="7"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>