<?xml version="1.0" encoding="utf-8"?>
<com.cp2y.cube.widgets.HScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:id="@+id/location_trend_HScroll"
    android:scrollbars="none"
    android:layout_height="46dp">

        <LinearLayout
            android:id="@+id/location_trend_ll"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/location_trend_submit_tip_layout"
                android:layout_width="70dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/location_trend_submit_layout"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/location_trend_tv"
                        android:layout_width="50dp"
                        android:text="选择号码"
                        android:gravity="center"
                        android:textSize="@dimen/app_tvSmall_size"
                        android:textColor="@color/colorSpanTextSelect"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_below="@id/location_trend_tv"
                        android:layout_width="50dp"
                        android:gravity="center"
                        android:textSize="@dimen/app_tvSmall_size"
                        android:textColor="@color/colorSpanTextSelect"
                        android:text="并保存"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:layout_toRightOf="@id/location_trend_submit_layout"
                    android:layout_width="20dp"
                    android:text="➝"
                    android:gravity="center"
                    android:textSize="@dimen/app_tvNomal_size"
                    android:textColor="@color/colorSpanTextSelect"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <CheckBox
                style="@style/TrendBallCheck"
                android:text="0"/>
            <CheckBox
                style="@style/TrendBallCheck"
                android:text="1"/>

            <CheckBox
                style="@style/TrendBallCheck"
                android:text="2"/>

            <CheckBox
                style="@style/TrendBallCheck"
                android:text="3"/>

            <CheckBox
                style="@style/TrendBallCheck"
                android:text="4"/>

            <CheckBox
                style="@style/TrendBallCheck"
                android:text="5"/>

            <CheckBox
                style="@style/TrendBallCheck"
                android:text="6"/>

            <CheckBox
                style="@style/TrendBallCheck"
                android:text="7"/>

            <CheckBox
                style="@style/TrendBallCheck"
                android:text="8"/>

            <CheckBox
                style="@style/TrendBallCheck"
                android:text="9"/>
        </LinearLayout>

</com.cp2y.cube.widgets.HScrollView>