<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               android:layout_width="match_parent"
                                               android:layout_height="52dp"
                                               android:paddingLeft="12dp"
                                               android:paddingRight="12dp"
                                               android:background="@color/colorPrimary"
                                               xmlns:fresco="http://schemas.android.com/apk/res-auto">
<com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/atten_fans_icon"
    android:layout_width="36dp"
    fresco:placeholderImage="@mipmap/btn_avatar"
    fresco:placeholderImageScaleType="fitXY"
    android:layout_marginRight="8dp"
    fresco:roundAsCircle="true"
    android:layout_centerVertical="true"
    android:layout_height="36dp"/>
    <LinearLayout
        android:layout_toRightOf="@id/atten_fans_icon"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/atten_fans_name"
            android:textColor="@color/colorFansName"
            android:textSize="@dimen/app_tvSmall_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/atten_fans_message"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/colorSpanTextSelect"
            android:textSize="@dimen/app_tvSmall_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/attention_fans_button"
        android:layout_width="44dp"
        android:src="@mipmap/xq_yiguanzhu"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="20dp"/>
</android.support.percent.PercentRelativeLayout>