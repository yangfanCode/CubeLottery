<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/custom_dialog_title"
    android:layout_width="wrap_content"
    android:text="温馨提示"
    android:textColor="@color/colorLeftMenu"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:textSize="@dimen/app_tvMidBall_size"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/custom_dialog_message"
        android:layout_below="@id/custom_dialog_title"
        android:layout_width="wrap_content"
        android:text="彩种最多定制6个"
        android:textColor="@color/colorLeftMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="46dp"
        android:textSize="@dimen/app_tvMidBall_size"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/custom_dialog_btn"
        android:layout_below="@id/custom_dialog_message"
        android:layout_width="match_parent"
        android:background="@color/colorBlueBall"
        android:text="我知道了"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/app_tvMidBall_size"
        android:layout_height="50dp" />
</android.support.percent.PercentRelativeLayout>