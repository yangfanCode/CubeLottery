<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/filter_single_layout"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/filter_single_tv"
    android:layout_width="wrap_content"
    android:text="单式"
    android:textSize="@dimen/app_tvNomal_size"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center_vertical"
    android:layout_marginRight="10dp"
    android:textColor="@color/colorSelectText"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/filter_single_ball_layout"
        android:layout_toRightOf="@id/filter_single_tv"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/filter_single_red1"
            android:layout_width="26dp"
            android:textSize="@dimen/app_tvBall_size"
            android:textColor="@color/colorNormalRed"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:background="@drawable/lottery_ball"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/filter_single_red2"
            android:layout_width="26dp"
            android:textSize="@dimen/app_tvBall_size"
            android:textColor="@color/colorNormalRed"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:background="@drawable/lottery_ball"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/filter_single_red3"
            android:layout_width="26dp"
            android:textSize="@dimen/app_tvBall_size"
            android:textColor="@color/colorNormalRed"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:background="@drawable/lottery_ball"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/filter_single_red4"
            android:layout_width="26dp"
            android:textSize="@dimen/app_tvBall_size"
            android:textColor="@color/colorNormalRed"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:background="@drawable/lottery_ball"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/filter_single_red5"
            android:layout_width="26dp"
            android:textSize="@dimen/app_tvBall_size"
            android:textColor="@color/colorNormalRed"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:background="@drawable/lottery_ball"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/filter_single_red6"
            android:layout_width="26dp"
            android:textSize="@dimen/app_tvBall_size"
            android:textColor="@color/colorBlueBall"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:background="@drawable/lottery_ball"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/filter_single_blue1"
            android:layout_width="26dp"
            android:textSize="@dimen/app_tvBall_size"
            android:textColor="@color/colorBlueBall"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:background="@drawable/lottery_ball"
            android:layout_height="26dp" />
    </LinearLayout>

</RelativeLayout>