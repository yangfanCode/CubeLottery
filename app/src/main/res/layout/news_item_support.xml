<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/item_support_icon"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/item_support_icon">

        <TextView
            android:id="@+id/item_support_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/app_tvNomal_size"
            android:textColor="@color/colorSelectText"
            android:ellipsize="end"
            android:maxLines="2"
            />

        <TextView
            android:id="@+id/item_support_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_tvSmall_size"
            android:textColor="@color/colorSpanTextSelect"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="14dp"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="3dp"
                android:src="@mipmap/icon_zan" />

            <TextView
                android:id="@+id/item_support_zanCount"
                android:layout_width="wrap_content"
                android:textSize="@dimen/app_tvSmall_size"
                android:textColor="@color/colorSpanTextSelect"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="3dp"
                android:src="@mipmap/icon_kan" />

            <TextView
                android:id="@+id/item_support_kanCount"
                android:layout_width="wrap_content"
                android:textSize="@dimen/app_tvSmall_size"
                android:textColor="@color/colorSpanTextSelect"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                 />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>