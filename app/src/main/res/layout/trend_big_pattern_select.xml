<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/add_pattern_ll"
    android:layout_height="46dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/trend_submit_tips"
        android:layout_width="156dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/app_tvNomal_size"
        android:textColor="@color/colorSpanTextSelect"
        android:text="选择条件并保存 ➝"/>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RadioButton
            style="@style/TrendConditionCheck"
            android:text="大"/>

        <RadioButton
            style="@style/TrendConditionCheck"
            android:text="小"/>

    </RadioGroup>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RadioButton
            style="@style/TrendConditionCheck.Blue"
            android:text="大"/>

        <RadioButton
            style="@style/TrendConditionCheck.Blue"
            android:text="小"/>

    </RadioGroup>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RadioButton
            style="@style/TrendConditionCheck.Green"
            android:text="大"/>

        <RadioButton
            style="@style/TrendConditionCheck.Green"
            android:text="小"/>

    </RadioGroup>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RadioButton
            style="@style/TrendConditionCheck"
            android:text="大"/>

        <RadioButton
            style="@style/TrendConditionCheck"
            android:text="小"/>

    </RadioGroup>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RadioButton
            style="@style/TrendConditionCheck.Blue"
            android:text="大"/>

        <RadioButton
            style="@style/TrendConditionCheck.Blue"
            android:text="小"/>

    </RadioGroup>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RadioButton
            style="@style/TrendConditionCheck.Green"
            android:text="大"/>

        <RadioButton
            style="@style/TrendConditionCheck.Green"
            android:text="小"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/trend_blue_select"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RadioButton
            style="@style/TrendConditionCheck"
            android:text="大"/>

        <RadioButton
            style="@style/TrendConditionCheck"
            android:text="小"/>

    </RadioGroup>

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"/>

</LinearLayout>