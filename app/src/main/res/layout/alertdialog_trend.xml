<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/alertdialog_trend_title"
        android:textColor="@color/colorSelectText"
        android:textSize="@dimen/app_tvNomal_size"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/alertdialog_trend_close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:background="@mipmap/icon_closed"
        android:layout_height="wrap_content" />
<com.cp2y.cube.custom.MyGridView
    android:layout_below="@id/alertdialog_trend_title"
    android:layout_marginTop="20dp"
    android:id="@+id/alertdialog_trend_gv"
    android:layout_width="match_parent"
    android:numColumns="3"
    android:layout_marginBottom="25dp"
    android:layout_height="wrap_content">
</com.cp2y.cube.custom.MyGridView>
</RelativeLayout>