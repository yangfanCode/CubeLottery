<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cp2y.cube.activity.calculate.fragment.d3.CalcD3ZuXuanFragment">

    <RelativeLayout
        android:id="@+id/selectNum_3d_zu3_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/selectNum_filterDanTuo_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#DDDDDD" />

        <Button
            android:id="@+id/calc_zuxuan_btnClear"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:background="@drawable/app_myfilter_ignore"
            android:gravity="center"
            android:text="清空"
            android:textColor="@color/colorSelectText"
            android:textSize="@dimen/app_tvNomal_size" />


        <Button
            android:id="@+id/calc_zuxuan_btnSubmit"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:background="@mipmap/xh_btn_baocun"
            android:gravity="center"
            android:text="选好了"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/app_tvNomal_size" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/selectNum_3d_zu3_tip_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/selectNum_3d_zu3_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/app_select_tip2"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="6dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"
            android:textColor="@color/colorLeftMenu"
            android:textSize="@dimen/app_tvNomal_size" />

        <TextView
            android:id="@+id/selectNum_filterNomal_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlueBall"
            android:textSize="@dimen/app_tvNomal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注"
            android:textColor="@color/colorLeftMenu"
            android:textSize="@dimen/app_tvNomal_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/selectNum_3d_zu3_layout">

        <RelativeLayout
            android:id="@+id/fragment_3d_layoutNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/fragment_3d_view1"
                android:layout_width="4dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="6.5dp"
                android:background="@color/colorBlueBall" />

            <TextView
                android:id="@+id/fragment_3d_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/fragment_3d_view1"
                android:text="组选单式"
                android:textColor="@color/colorSelectText"
                android:textSize="@dimen/app_tvNomal_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/fragment_3d_tv1"
                android:text="(最多输入100注，一行一注，格式如：358)"
                android:textColor="@color/colorSpanTextSelect"
                android:textSize="@dimen/app_tvSmall_size" />

        </RelativeLayout>

        <EditText
            android:id="@+id/calc_zuxuan_edInput"
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:padding="@dimen/padding_3"
            android:lineSpacingExtra="@dimen/padding_1dp"
            android:gravity="top"
            android:layout_marginTop="@dimen/padding_16"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textSize="@dimen/textSize_16"
            android:digits="0123456789\n"
            android:textColor="@color/color6A6A6A"
            android:background="@drawable/bg_comment_pop"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_below="@id/fragment_3d_layoutNum"
            android:layout_marginLeft="@dimen/padding_12"
            android:layout_marginRight="@dimen/padding_12" />
    </RelativeLayout>


</android.support.percent.PercentRelativeLayout>
