<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:orientation="vertical">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/news_double_head_win_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/news_double_head_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/bg_jiangqi"
        android:orientation="horizontal"
        android:paddingLeft="13dp">

        <TextView
            android:id="@+id/news_double_head_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/app_tvNomal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="期您的号码库中奖情况"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/app_tvNomal_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/news_double_head_title_ll"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <include
            android:id="@+id/news_double_head_noteNum"
            layout="@layout/news_nowin_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom" />

        <TextView
            android:id="@+id/news_double_head_win_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="30dp"
            android:text="注"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/app_tvSmall_size" />

        <include
            android:id="@+id/news_double_head_price"
            layout="@layout/news_nowin_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/news_double_head_win_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="元"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/app_tvSmall_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="30dp">

        <LinearLayout
            android:id="@+id/news_double_head_num_ll"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_double_head_issue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/app_tvSmall_size" />

            <TextView
                android:id="@+id/news_double_head_tv_drawNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期开奖号码"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/app_tvSmall_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/news_double_head_drawNum_ll"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginBottom="11dp"
            android:layout_below="@id/news_double_head_num_ll"
            android:orientation="horizontal">

            <include
                android:id="@+id/news_head_num1"
                layout="@layout/news_win_num"
                android:layout_width="wrap_content"
                android:layout_height="43dp" />

            <include
                android:id="@+id/news_head_num2"
                layout="@layout/news_win_num"
                android:layout_width="wrap_content"
                android:layout_height="43dp" />

            <include
                android:id="@+id/news_head_num3"
                layout="@layout/news_win_num"
                android:layout_width="wrap_content"
                android:layout_height="43dp" />

            <include
                android:id="@+id/news_head_num4"
                layout="@layout/news_win_num"
                android:layout_width="wrap_content"
                android:layout_height="43dp" />

            <include
                android:id="@+id/news_head_num5"
                layout="@layout/news_win_num"
                android:layout_width="wrap_content"
                android:layout_height="43dp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.percent.PercentRelativeLayout>