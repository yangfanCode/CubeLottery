<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/divide_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:id="@+id/custom_filter_chu3_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:id="@+id/tip_title_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/custom_filter_chu3_tip_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/colorSelectText"
                        android:textSize="@dimen/app_tvNomal_size" />

                    <ImageView
                        android:id="@+id/custom_filter_chu3_tip_controler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/custom_filter_chu3_tip_title"
                        android:src="@mipmap/gltj_icon_xiala" />
                </RelativeLayout>

                <com.cp2y.cube.widgets.switchbutton.SwitchButton xmlns:jieke="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/custom_filter_chu3_tip_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tip_title_layout"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    jieke:bmHeight="@dimen/switch_height"
                    jieke:bmWidth="@dimen/switch_width" />

                <TextView
                    android:id="@+id/custom_filter_chu3_tip_tvSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/custom_filter_chu3_tip_switch"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/custom_filter_chu3_tip_switch"
                    android:text=""
                    android:textColor="@color/colorSpanTextSelect"
                    android:textSize="@dimen/app_tvSmall_size" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/alert_dialog_chu3_layout_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/custom_filter_chu3_title_layout"
                android:layout_marginBottom="10dp"
                android:background="@mipmap/note_bg_chu3yu"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/alert_dialog_chu3_layout_tvTip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:lineSpacingExtra="3dp"
                    android:padding="10dp"
                    android:text="@string/filter_divideTip"
                    android:textColor="@color/colorSelectText"
                    android:textSize="@dimen/app_tvSmall_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/alert_dialog_chu3_layout_yu0"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_below="@id/alert_dialog_chu3_layout_tip"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/alert_dialog_chu3_layout_tvYu0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="余(0):"
                    android:textColor="@color/colorSpanTextSelect"
                    android:textSize="@dimen/app_tvSmall_size" />

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/alert_dialog_chu3_layout_tvYu0">

                    <TextView
                        android:id="@+id/alert_dialog_chu3_layout_tvAlertWheel"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/gltj_btn_xiala_150"
                        android:gravity="center"
                        android:hint="0-7"
                        android:textColor="@color/colorSpanTextSelect"
                        android:textSize="@dimen/app_tvSmall_size" />

                    <TextView
                        android:id="@+id/alert_dialog_chu3_yu0_tvge"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/alert_dialog_chu3_layout_tvAlertWheel"
                        android:gravity="center"
                        android:text="个"
                        android:textColor="@color/colorSpanTextSelect"
                        android:textSize="@dimen/app_tvSmall_size" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/alert_dialog_chu3_layout_yu1"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_below="@id/alert_dialog_chu3_layout_yu0"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/alert_dialog_chu3_layout_tvYul"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="余(1):"
                    android:textColor="@color/colorSpanTextSelect"
                    android:textSize="@dimen/app_tvSmall_size" />

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/alert_dialog_chu3_layout_tvYul">

                    <TextView
                        android:id="@+id/alert_dialog_chu3_layout_tvAlertWhee2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/gltj_btn_xiala_150"
                        android:gravity="center"
                        android:hint="0-7"
                        android:textColor="@color/colorSpanTextSelect"
                        android:textSize="@dimen/app_tvSmall_size" />

                    <TextView
                        android:id="@+id/alert_dialog_chu3_yu1_tvge"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/alert_dialog_chu3_layout_tvAlertWhee2"
                        android:gravity="center"
                        android:text="个"
                        android:textColor="@color/colorSpanTextSelect"
                        android:textSize="@dimen/app_tvSmall_size" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/alert_dialog_chu3_layout_yu2"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_below="@id/alert_dialog_chu3_layout_yu1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/alert_dialog_chu3_layout_tvYu2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="余(2):"
                    android:textColor="@color/colorSpanTextSelect"
                    android:textSize="@dimen/app_tvSmall_size" />

                <TextView
                    android:id="@+id/alert_dialog_chu3_layout_tvYu2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/alert_dialog_chu3_layout_tvYu2"
                    android:gravity="center"
                    android:text="0-7个"
                    android:textColor="@color/colorSpanTextSelect"
                    android:textSize="@dimen/app_tvSmall_size" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#E7E7E7" />

        <RelativeLayout
            android:id="@+id/custom_filter_chu3XingTai_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/custom_filter_chu3XingTai_tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="除3余形态"
                android:textColor="@color/colorSpanTextSelect"
                android:textSize="@dimen/app_tvSmall_size" />

            <com.cp2y.cube.widgets.switchbutton.SwitchButton xmlns:jieke="http://schemas.android.com/apk/res-auto"
                android:id="@+id/custom_filter_chu3XingTai_tip_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/custom_filter_chu3XingTai_tip_title"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                jieke:bmHeight="@dimen/switch_height"
                jieke:bmWidth="@dimen/switch_width" />

            <TextView
                android:id="@+id/custom_filter_chu3XingTai_tip_tvSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/custom_filter_chu3XingTai_tip_switch"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/custom_filter_chu3XingTai_tip_switch"
                android:text=""
                android:textColor="@color/colorSpanTextSelect"
                android:textSize="@dimen/app_tvSmall_size" />
        </RelativeLayout>

        <com.cp2y.cube.custom.MyGridView
            android:id="@+id/custom_filter_chu3XingTai_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:numColumns="5"></com.cp2y.cube.custom.MyGridView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_numTrend_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/divide_layout"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F3F3F3" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/NegativeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:text="取消"
                android:textColor="@color/colorSpanTextSelect"
                android:textSize="@dimen/app_tvNomal_size" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#F3F3F3" />

            <Button
                android:id="@+id/PositiveButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:text="确定"
                android:textColor="@color/colorBlueBall"
                android:textSize="@dimen/app_tvNomal_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>