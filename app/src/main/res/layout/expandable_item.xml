<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp">
<TextView
    android:layout_marginLeft="40dp"
    android:id="@+id/expandable_lv_item_tvTrend"
    android:layout_width="wrap_content"
    android:textSize="@dimen/app_tvNomal_size"
    android:layout_centerVertical="true"
    android:layout_marginRight="10dp"
    android:textColor="@color/colorSelectText"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/expandable_lv_item_tvIgnore"
        android:layout_width="wrap_content"
        android:textSize="@dimen/app_tvSmall_size"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/expandable_lv_item_tvTrend"
        android:background="@drawable/app_expandable"
        android:textColor="@color/colorBlueBall"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:src="@mipmap/zoushi_xiala_right"
        android:layout_height="wrap_content" />
</RelativeLayout>