<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flowlayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorchecklottery"
       	android:textSize="@dimen/app_tvNomal_size"
       	android:layout_alignTop="@+id/result_ticket_layout"
       	android:layout_marginTop="5dp"
        android:text="" />
    
    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/result_ticket_layout"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/result_title"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
    </org.apmem.tools.layouts.FlowLayout>

</RelativeLayout>