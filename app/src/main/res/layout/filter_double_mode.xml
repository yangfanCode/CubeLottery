<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/filter_double_layout"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/filter_double_tv"
        android:layout_width="wrap_content"
        android:text="复式"
        android:textSize="@dimen/app_tvNomal_size"
        android:textColor="@color/colorSelectText"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content" />
    <com.cp2y.cube.widgets.TouchLessGridView
        android:layout_toRightOf="@id/filter_double_tv"
        android:id="@+id/filter_double_gv_red"
        android:layout_width="240dp"
        android:columnWidth="26dp"
        android:verticalSpacing="10dp"
        android:numColumns="8"
        android:layout_height="wrap_content">
    </com.cp2y.cube.widgets.TouchLessGridView>
    <com.cp2y.cube.widgets.TouchLessGridView
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/filter_double_tv"
        android:id="@+id/filter_double_gv_blue"
        android:layout_below="@id/filter_double_gv_red"
        android:layout_width="240dp"
        android:verticalSpacing="10dp"
        android:numColumns="8"
        android:layout_height="wrap_content">
    </com.cp2y.cube.widgets.TouchLessGridView>
</RelativeLayout>