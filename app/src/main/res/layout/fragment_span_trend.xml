<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.doubleball.NumTrendFragment">

    <!-- 跨幅度走势 -->
    <com.cp2y.cube.widgets.HVSRelativeLayout
        android:id="@+id/trend_layout"
        android:layout_below="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/scroll_layout0"
            android:background="@drawable/trend_title_background"
            android:layout_width="@dimen/trend_title_width"
            android:layout_height="@dimen/trend_title_height">

            <CheckBox
                android:id="@+id/trend_reverse"
                style="@style/TrendReverseCheck"
                android:layout_centerInParent="true"
                android:text="奖期"
                android:textColor="@color/colorSelectText" />

            <View
                android:layout_alignParentRight="true"
                style="@style/BaseLine.Vertical.Trend"/>

        </RelativeLayout>

        <com.cp2y.cube.widgets.HVListView
            android:id="@+id/scroll_layout1"
            android:layout_above="@+id/trend_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/scroll_layout0"
            android:scrollbars="none"
            android:divider="@null"
            android:layout_alignLeft="@+id/scroll_layout0"
            android:layout_alignRight="@+id/scroll_layout0"
            android:background="@drawable/trend_date_background">

        </com.cp2y.cube.widgets.HVListView>

        <com.cp2y.cube.widgets.HScrollView
            android:id="@+id/scroll_layout2"
            android:layout_toRightOf="@+id/scroll_layout0"
            android:layout_alignTop="@+id/scroll_layout0"
            android:layout_alignBottom="@+id/scroll_layout0"
            android:background="@drawable/trend_title_background"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trend_number_title"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorSelectText"
                    style="@style/TrendTitle"
                    android:textSize="@dimen/mid_textSize"
                    android:text="开奖号码"/>

                <LinearLayout
                    style="@style/TrendTitle"
                    android:orientation="vertical"
                    android:layout_width="810dp"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/SmallText"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorSelectText"
                        android:text="跨度"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="6"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="7"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="8"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="9"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="10"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="11"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="12"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="13"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="14"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="15"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="16"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="17"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="18"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="19"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="20"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="21"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="22"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="23"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="24"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="25"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="26"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="27"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="28"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="29"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="30"/>

                        <TextView
                            android:background="@color/colorTrendBackground"
                            style="@style/TrendBaseNum"
                            android:text="31"/>

                        <TextView
                            android:background="@drawable/trend_date_background"
                            style="@style/TrendBaseNum"
                            android:text="32"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/TrendBaseNum"
                    android:text="跨度"
                    android:layout_width="36dp"/>

            </LinearLayout>

        </com.cp2y.cube.widgets.HScrollView>

        <com.cp2y.cube.widgets.HVListView
            android:id="@+id/scroll_list"
            android:divider="@null"
            android:layout_above="@+id/trend_submit"
            android:layout_below="@+id/scroll_layout0"
            android:layout_toRightOf="@+id/scroll_layout0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.cp2y.cube.widgets.HVListView>

        <com.cp2y.cube.widgets.HVScrollView
            android:scrollbars="none"
            android:layout_above="@+id/trend_submit"
            android:layout_below="@+id/scroll_layout0"
            android:layout_toRightOf="@+id/scroll_layout0"
            android:id="@+id/scroll_layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!-- the hold view -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
            </LinearLayout>

        </com.cp2y.cube.widgets.HVScrollView>

        <View
            style="@style/BaseLine"
            android:id="@+id/trend_view_span"
            android:background="@color/colorMidGray"
            android:layout_above="@+id/trend_submit"/>

        <TextView
            android:id="@+id/trend_submit"
            style="@style/TrendSubmit"
            android:layout_width="@dimen/trend_title_width"
            android:layout_height="46dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="条件"/>

        <com.cp2y.cube.widgets.HScrollView
            android:id="@+id/trend_submit_layout"
            android:layout_toRightOf="@+id/trend_submit"
            android:layout_alignParentBottom="true"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="46dp">

            <LinearLayout
                android:id="@+id/span_num_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trend_submit_tips"
                    android:layout_width="156dp"
                    android:textSize="@dimen/app_tvNomal_size"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorSpanTextSelect"
                    android:text="选择条件并保存 ➝"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="6"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="7"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="8"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="9"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="10"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="11"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="12"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="13"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="14"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="15"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="16"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="17"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="18"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="19"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="20"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="21"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="22"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="23"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="24"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="25"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="26"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="27"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="28"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="29"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="30"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="31"/>

                <CheckBox
                    style="@style/TrendConditionCheck"
                    android:text="32"/>

                <View
                    android:layout_width="36dp"
                    android:layout_height="1dp"/>

            </LinearLayout>

        </com.cp2y.cube.widgets.HScrollView>

    </com.cp2y.cube.widgets.HVSRelativeLayout>

</FrameLayout>
