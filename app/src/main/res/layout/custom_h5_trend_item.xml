<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/trend_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/trend_icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp" />

            <TextView
                android:id="@+id/trend_tvLotteryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/trend_icon"
                android:textColor="@color/colorSelectText"
                android:textSize="@dimen/app_tvBall_size" />

            <TextView
                android:id="@+id/trend_tvLotteryTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/trend_icon"
                android:layout_toRightOf="@id/trend_icon"
                android:text="走势"
                android:textColor="@color/colorSpanTextSelect"
                android:textSize="@dimen/app_tvSmall_size" />

            <ImageView
                android:id="@+id/up_down_icon"
                android:layout_width="17dp"
                android:layout_height="9dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:src="@mipmap/chart_button_pulldown" />
            <TextView
                android:id="@+id/trend_noDevelop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="敬请期待"
                android:visibility="gone"
                android:textSize="@dimen/app_tvBall_size"
                android:textColor="@color/colorNoDevelop"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/trend_detail_ll"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:id="@+id/trend_view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTrendBorder" />
            <LinearLayout
                android:id="@+id/app_trend_ll"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_trend1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="30dp"
                            android:text="基本号走势"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@color/colorSelectText"
                            android:textSize="@dimen/app_tvNomal_size" />

                        <ImageView
                            android:id="@+id/trend_hot1"
                            android:layout_width="10dp"
                            android:layout_height="11dp"
                            android:layout_marginBottom="22dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="22dp"
                            android:src="@mipmap/icon_remen" />
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorTrendBorder" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_trend2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="30dp"
                            android:text="定位走势"
                            android:textColor="@color/colorSelectText"
                            android:textSize="@dimen/app_tvNomal_size" />

                        <ImageView
                            android:id="@+id/trend_hot2"
                            android:layout_width="10dp"
                            android:layout_height="11dp"
                            android:layout_marginBottom="22dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="22dp"
                            android:src="@mipmap/icon_remen" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/trend_view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTrendBorder" />

            <LinearLayout
                android:id="@+id/app_trend_double_ll2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

