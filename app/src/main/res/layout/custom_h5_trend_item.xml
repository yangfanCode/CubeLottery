                            android:gravity="left|center_vertical"
                            android:paddingLeft="30dp"
                            android:text="跨度走势"
                            android:textColor="@color/colorSelectText"
                            android:textSize="@dimen/app_tvNomal_size" />

                        <ImageView
                            android:id="@+id/trend_hot3"
                            android:layout_width="10dp"
                            android:layout_height="11dp"
                            android:layout_marginBottom="22dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="22dp"
                            android:src="@mipmap/icon_remen" />
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorTrendBorder" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_trend4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="30dp"
                            android:text="除3余走势"
                            android:textColor="@color/colorSelectText"
                            android:textSize="@dimen/app_tvNomal_size" />

                        <ImageView
                            android:id="@+id/trend_hot4"
                            android:layout_width="10dp"
                            android:layout_height="11dp"
                            android:layout_marginBottom="22dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="22dp"
                            android:src="@mipmap/icon_remen" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/trend_view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTrendBorder" />

            <LinearLayout
                android:id="@+id/app_trend_double_ll3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_trend5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="30dp"
