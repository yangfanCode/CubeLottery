<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/main_button_enabled_bg_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/main_button_pressed_bg_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/main_button_normal_bg_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</selector>