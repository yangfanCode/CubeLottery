<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially"><!--顺序执行-->
    <set
        android:ordering="together"
        >
        <objectAnimator
            android:propertyName="scaleX"
            android:valueFrom="1"
            android:valueTo="1.3"
            android:duration="300"
            ></objectAnimator>

        <objectAnimator
            android:propertyName="scaleY"
            android:valueFrom="1"
            android:valueTo="1.3"
            android:duration="300"
            ></objectAnimator>

    </set>
    <set
        android:ordering="together"
        >
        <objectAnimator
            android:propertyName="scaleX"
            android:valueFrom="1.3"
            android:valueTo="1"
            android:duration="300"
            ></objectAnimator>

        <objectAnimator
            android:propertyName="scaleY"
            android:valueFrom="1.3"
            android:valueTo="1"
            android:duration="300"
            ></objectAnimator>
    </set>
</set>